from bs4 import BeautifulSoup
import requests
import csv

source = requests.get(
    "https://store.steampowered.com/search/?sort_by=Released_DESC&os=win&filter=popularnew").text
soup = BeautifulSoup(source, 'lxml')

article = soup.find('div')

title = article.find('span', class_='title').text
print("Title: ", title)

date = article.find(
    'div', class_='col search_released responsive_secondrow').text
print("Release date: ", date)

price = article.find('div', class_='col search_price  responsive_secondrow')
print("Release date: ", price)
